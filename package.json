{
    "name": "myapp",
    "version": "1.0.0",
    "description": "just new node app",
    "main": "index.js",
    "repository": {},
    "nodemonConfig": {
        "ignore": [
            "**/*.test.ts",
            "**/*.spec.ts",
            ".git",
            "node_modules"
        ],
        "watch": [
            "src"
        ],
        "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/server.ts",
        "ext": "ts, js"
    },
    "scripts": {
        "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run next\"",
        "server": "nodemon ",
        "next": "next",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\"  \"npm run watch-ts\" \"npm run watch-node\"",
        "watch-ts": "tsc -w",
        "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
        "watch-node": "nodemon dist/index.js",
        "build-ts": "tsc",
        "migration:generate": "typeorm migration:generate -n gen_create_migrateion",
        "migration:create": "typeorm migration:create create_migrateion",
        "migration:createAdmin": "typeorm migration:create -n CreateAdminUser",
        "migration:run": "typeorm migration:run",
        "migration:revert": "typeorm migration:revert",
        "prebuild": "rm -rf dist",
        "start": "npm run serve",
        "serve": "node dist/server.js",
        "build": "npm run build-ts ",
        "docker-build": "docker build .",
        "docker-run": "docker run <image-id>"
    },
    "author": "Mohammed Almajid",
    "license": "MIT",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.19.0",
        "class-validator": "^0.11.1",
        "compression": "^1.7.4",
        "connect-redis": "^4.0.4",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "express-session": "^1.17.0",
        "helmet": "^3.21.3",
        "jsonwebtoken": "^8.5.1",
        "morgan": "^1.9.1",
        "pg": "^7.18.2",
        "redis": "^3.1.1",
        "reflect-metadata": "^0.1.13",
        "typeorm": "0.2.24"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/body-parser": "^1.19.0",
        "@types/compression": "^1.7.0",
        "@types/connect-redis": "0.0.13",
        "@types/cors": "^2.8.6",
        "@types/errorhandler": "1.5.0",
        "@types/express": "^4.17.3",
        "@types/express-session": "^1.17.0",
        "@types/helmet": "0.0.45",
        "@types/jsonwebtoken": "^8.3.8",
        "@types/morgan": "^1.9.0",
        "@types/node": "^13.9.2",
        "@types/pg": "^7.14.3",
        "@types/react": "^16.9.23",
        "@types/redis": "^2.8.16",
        "@typescript-eslint/eslint-plugin": "^2.24.0",
        "@typescript-eslint/parser": "^2.24.0",
        "concurrently": "^5.1.0",
        "dotenv": "^8.2.0",
        "errorhandler": "^1.5.1",
        "eslint": "^6.8.0",
        "eslint-config-airbnb": "^18.1.0",
        "eslint-config-airbnb-base": "^14.1.0",
        "eslint-config-google": "^0.14.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-import": "^2.20.1",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.2",
        "prettier": "^1.19.1",
        "ts-node": "^8.7.0",
        "tsconfig-paths": "^3.9.0",
        "typescript": "3.8.3"
    }
}
